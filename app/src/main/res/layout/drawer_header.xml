<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_header"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorDrawerHeader"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <TextView
            android:id="@+id/text_drawer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Twitter"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            android:id="@+id/text_drawer_screen_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="/@AccountID"
            android:padding="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            android:id="@+id/text_drawer_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Name"
            android:layout_above="@id/text_drawer_screen_name"
            android:paddingLeft="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


</RelativeLayout>